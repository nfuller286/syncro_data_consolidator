{
  "version": "0.2.0",
  "configurations": [
    // ðŸŸ¢ Full Pipeline
    {
      "name": "SDC: Run Full Pipeline",
      "type": "debugpy",
      "request": "launch",
      "module": "sdc.run_sdc",
      "args": ["run", "--pipeline", "full"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src",
      "justMyCode": true
    },
    {
      "name": "SDC: Run Ingest Only Pipeline",
      "type": "debugpy",
      "request": "launch",
      "module": "sdc.run_sdc",
      "args": ["run", "--pipeline", "ingest_only"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src",
      "justMyCode": true
    },

    // ðŸŸ¡ Caching
    {
      "name": "SDC: Cache Syncro",
      "type": "debugpy",
      "request": "launch",
      "module": "sdc.run_sdc",
      "args": ["cache", "--source", "syncro"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src",
      "justMyCode": true
    },

    // ðŸ”µ Ingestors (Interactive)
    {
      "name": "SDC: Ingest Source (Interactive)",
      "type": "debugpy",
      "request": "launch",
      "module": "sdc.run_sdc",
      "args": ["ingest", "--source", "${input:ingestSource}"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src",
      "justMyCode": true
    },

    // ðŸ”´ Processing (Interactive)
    {
      "name": "SDC: Process Step (Interactive)",
      "type": "debugpy",
      "request": "launch",
      "module": "sdc.run_sdc",
      "args": ["process", "--step", "${input:processStep}"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src",
      "justMyCode": true
    },

    // ðŸ”´ Processing (Specific Steps)
    {
      "name": "SDC: Process Customer Linking",
      "type": "debugpy",
      "request": "launch",
      "module": "sdc.run_sdc",
      "args": ["process", "--step", "customer_linking"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src",
      "justMyCode": true
    },
    {
      "name": "SDC: Process LLM Title Generation",
      "type": "debugpy",
      "request": "launch",
      "module": "sdc.run_sdc",
      "args": ["process", "--step", "llm_title"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src",
      "justMyCode": true
    },
    {
      "name": "SDC: Process LLM Summarization",
      "type": "debugpy",
      "request": "launch",
      "module": "sdc.run_sdc",
      "args": ["process", "--step", "llm_summary"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src",
      "justMyCode": true
    },
    {
      "name": "SDC: Process All Steps",
      "type": "debugpy",
      "request": "launch",
      "module": "sdc.run_sdc",
      "args": ["process", "--step", "all"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/src",
      "justMyCode": true
    }
  ],
  "inputs": [
    {
      "id": "ingestSource",
      "type": "pickString",
      "description": "Select the data source to ingest:",
      "options": [
        "all",
        "notes",
        "screenconnect",
        "sillytavern",
        "syncro"
      ],
      "default": "all"
    },
    {
      "id": "processStep",
      "type": "pickString",
      "description": "Select the processing step to run:",
      "options": [
        "all",
        "customer_linking",
        "llm_title",
        "llm_summary",
        "llm_categorize"
      ],
      "default": "all"
    }
  ]
}
